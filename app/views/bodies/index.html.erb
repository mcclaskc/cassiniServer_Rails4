  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @bodies.each do |body| %>
    <tr>
      <td><%= body.name %></td>
      <td><%= link_to 'Show', body %></td>
